<layout-macro-def id="event-summary-fragment">
  <params>
    <param name="event" type="Event" max="One" min="Required"/>
  </params>
  <content>
    <layout-macro id="common:card">
      <title>{{event.name}}</title>
      <bodyText>{{event.starttime}}</bodyText>
      <image>{{event.url.images[0].url}}</image>
      <imageType>background</imageType>
      <aspectRatio>4_3</aspectRatio>
    </layout-macro>
  </content>
  <style></style>
</layout-macro-def>
